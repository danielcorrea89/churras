<div class="container">
    <form>
        <div class="form-group row">
            @Html.LabelFor(model => model.Quando, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Quando, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "txtQuando" } })
                @Html.ValidationMessageFor(model => model.Quando, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
