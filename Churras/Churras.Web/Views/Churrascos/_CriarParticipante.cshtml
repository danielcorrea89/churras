@model Churras.Web.Models.Churrascos.CriarParticipanteViewModel

<div class="modal-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="modal-header">
            <h5 class="modal-title">Novo Participante</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Participante.Nome, htmlAttributes: new { @class = "control-label col-sm-12" })
                <div class="col-sm-12">
                    @Html.EditorFor(model => model.Participante.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Participante.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">

                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Participante.ValorContribuicao, htmlAttributes: new { @class = "control-label col-sm-12" })
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Participante.ValorContribuicao, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Participante.ValorContribuicao, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Participante.Pago, htmlAttributes: new { @class = "control-label col-sm-12" })
                        <div class="col-sm-12">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Participante.Pago)
                                @Html.ValidationMessageFor(model => model.Participante.Pago, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Participante.Bebida, htmlAttributes: new { @class = "control-label col-sm-12" })
                        <div class="col-sm-12">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Participante.Bebida)
                                @Html.ValidationMessageFor(model => model.Participante.Bebida, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Participante.Obs, htmlAttributes: new { @class = "control-label col-sm-12" })
                <div class="col-sm-12">
                    @Html.EditorFor(model => model.Participante.Obs, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Participante.Obs, "", new { @class = "text-danger" })
                </div>
            </div>

            <input type="submit" class="btn btn-primary" value="Adicionar Participante" />

        </div>

        <div class="modal-footer">
            <input type="submit" class="btn btn-primary" value="Adicionar Participante" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        </div>
    }
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $.validator.unobtrusive.parse($("form"));
        });
    </script>
}